# Soldier Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# Environment Selection
# =============================================================================
# Options: development, staging, production, test
SOLDIER_ENV=development

# =============================================================================
# Debug Mode
# =============================================================================
# Set to true to enable debug mode (verbose logging, stack traces)
SOLDIER_DEBUG=false

# =============================================================================
# API Provider Keys
# =============================================================================
# Anthropic API key for Claude models
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API key for GPT models and embeddings
OPENAI_API_KEY=sk-...

# Cohere API key for reranking
COHERE_API_KEY=...

# Voyage AI API key for embeddings
VOYAGE_API_KEY=...

# Jina AI API key for embeddings and reranking
JINA_API_KEY=jina_...

# =============================================================================
# Vector Store (Qdrant)
# =============================================================================
# Qdrant Cloud URL (or self-hosted instance)
QDRANT_URL=https://your-cluster.qdrant.io:6333

# Qdrant API key (for Qdrant Cloud)
QDRANT_API_KEY=...

# =============================================================================
# Database Connection URLs
# =============================================================================
# PostgreSQL for ConfigStore, MemoryStore, AuditStore
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://soldier:soldier@localhost:5432/soldier

# Redis for SessionStore
# Format: redis://[:password@]host:port/db
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Observability
# =============================================================================
# OpenTelemetry OTLP endpoint for tracing
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# Optional Overrides
# =============================================================================
# Override any config value with SOLDIER_{SECTION}__{KEY} format
# Examples:
# SOLDIER_API__PORT=9000
# SOLDIER_API__RATE_LIMIT__REQUESTS_PER_MINUTE=100
# SOLDIER_STORAGE__SESSION__BACKEND=redis
